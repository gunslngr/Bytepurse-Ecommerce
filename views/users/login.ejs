<%- include('layouts/header.ejs') %>
<%- include("layouts/navbar.ejs") %>

    <!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                        <span>Login</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Login</h2>
                        <% if(typeof succMessage !== 'undefined'){ %>
                            <p style="color: #4caf50; margin-top: -10px"><%= succMessage %></p>
                            <% } %> <% if(typeof errMessage !== 'undefined'){ %>
                            <p style="color: #f44336; margin-top: -10px"><%= errMessage %></p>
                            <% } %>
                        <form action="/login" method="post">
                            <div class="group-input">
                                <input type="email" name="email" required placeholder="Enter Email">
                            </div>
                            <div class="group-input">
                                <input type="password" name="password" required placeholder="Enter Password">
                            </div>
                            <div class="group-input gi-check">
                                <div class="gi-more">
                                    <label for="save-pass">
                                        Save Password
                                        <input type="checkbox" id="save-pass">
                                        <span class="checkmark"></span>
                                    </label>
                                    <a href="/forgetPassword" class="forget-pass">Forget your Password</a>
                                </div>
                            </div>
                            <input type="submit" class="site-btn login-btn" value="Login">
                        </form>
                        <div class="switch-login">
                            <a href="/register" class="or-login">Or Create An Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register Form Section End -->

    <script>
        const emailInput = document.getElementById("email");
        emailInput.addEventListener("input", () => {
          let email = emailInput.value.trim();
          if (email === "") {
            emailInput.setCustomValidity("Email cannot be null");
          } else {
            emailInput.setCustomValidity("");
          }
        });
      
        const passwordInput = document.getElementById("password");
        passwordInput.addEventListener("input", () => {
          const password = passwordInput.value.trim();
      
          if (password.length < 6) {
            passwordInput.setCustomValidity("Password is less than 6");
          } else {
            passwordInput.setCustomValidity("");
          }
        });
      </script>

    <%- include('layouts/footer.ejs') %>