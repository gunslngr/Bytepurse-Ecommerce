<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Bytepurse</title>
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <meta name="description" content="" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta property="og:title" content="" />
  <meta property="og:type" content="" />
  <meta property="og:url" content="" />
  <meta property="og:image" content="" />
  <!-- Favicon -->
  <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg" />
  <!-- Template CSS -->
  <link href="/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
  <style>
    .btn-custom {
      padding: 0.25rem 0.5rem !important;
      font-size: 0.875rem !important;
      line-height: 1.5 !important;
    }

    .table-header-space th {
      padding-right: 15px;
      /* Adjust the value to control the spacing */
      /* border-right: 1px solid #ffffff; */
      text-align: center;
    }

    .table-content td {
      /* border-right: 1px solid #000000; */
      text-align: center;
      /* Adjust the color and thickness as needed */
    }
  </style>
</head>

<body>
  <div class="screen-overlay"></div>
  <%- include("layouts/sidebar.ejs") %>
    <main class="main-wrap">
      <%- include("layouts/navbar.ejs") %>
        <section class="content-main">
          <table class="table table-bordered table-striped">
            <thead class="table-dark table-header-space">
              <tr>
                <th>Product Image</th>
                <th>Product details</th>
                <th>Order Address</th>
                <th>Quantity</th>
                <th>Method</th>
                <th>Coupon Used</th>
                <th>Coupon discount</th>
                <th>Grandtotal</th>


              </tr>
            </thead>
            <tbody class="table-content">
              <% orderDetails.products.forEach((product)=> { %>
                <tr>
                  <td>
                    <img src="/productImages/resized/<%= product.productId.image[0] %>"
                      class="img-md img-fluid img-thumbnail" alt="Product Image">
                  </td>
                  <td>
                    <h5>
                      <%= product.productId.title %>
                    </h5><br>
                    <%= product.productId. description %>
                  </td>

                  <td>
                    <%= orderDetails.shipAddress %>
                  </td>
                  

                  <td>
                    <%= product.quantity %>
                  </td>

                  <td>
                    <%= orderDetails.method %>
                  </td>

                  <% if (orderDetails.coupon !==null && orderDetails.discount !==null ) { %>
                    <td>
                      <%= orderDetails.coupon %>
                    </td>
                    <td>₹<%= orderDetails.discount %>
                    </td>

                    <% } else { %>
                      <td>none</td>
                      <td>none</td>
                      <% } %>
                        <td>₹<%= product.productId.price %>
                        </td>
                </tr>
                <% }) %>
            </tbody>
          </table>

        </section>

        <!-- content-main end// -->
        <footer class="main-footer font-xs">
          <div class="row pb-30 pt-15">
            <div class="col-sm-6">
              <script>
                document.write(new Date().getFullYear());
              </script>
              &copy; Nest - HTML Ecommerce Template .
            </div>
            <div class="col-sm-6">
              <div class="text-sm-end">All rights reserved</div>
            </div>
          </div>
        </footer>
    </main>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/select2.min.js"></script>
    <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js?v=1.1" type="text/javascript"></script>
</body>

</html>